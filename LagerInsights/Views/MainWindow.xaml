<mah:MetroWindow x:Class="LagerInsights.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:LagerInsights"
                 Title="LagerInsights"
                 Width="1600"
                 Height="900"
                 GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
                 ResizeMode="CanResizeWithGrip"
                 WindowStartupLocation="CenterScreen"
                 WindowState="Maximized"
                 mc:Ignorable="d"
                 DataContext="{Binding RelativeSource={RelativeSource Self}}"
                 Closing="Window_Closing"
                 SnapsToDevicePixels="True"
                 SizeChanged="Window_SizeChanged">
    <Window.LayoutTransform>
        <ScaleTransform ScaleX="{Binding ScaleFactor}"
                        ScaleY="{Binding ScaleFactor}" />
    </Window.LayoutTransform>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Save"
                        Executed="CommandSaving"
                        CanExecute="CommandSaving_CanExecute" />
    </Window.CommandBindings>
    <Window.Resources>
    </Window.Resources>

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button x:Name="LaunchWebsiteButton"
                    Click="LaunchWebsite_Click"
                    ToolTip="Öffne die Webseite">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconOcticons Width="22"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        Kind="Flame" />
                            <TextBlock Margin="4 0 0 0"
                                       VerticalAlignment="Center"
                                       Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>

            <Menu Background="{DynamicResource MahApps.Brushes.Accent}">

                <MenuItem Header="Datei"
                          Background="{DynamicResource MahApps.Brushes.Accent}"
                          Foreground="{DynamicResource MahApps.Brushes.IdealForeground}">
                    <MenuItem.Icon>
                        <iconPacks:PackIconModern Width="22"
                                                  Height="22"
                                                  VerticalAlignment="Center"
                                                  Kind="Folder" />
                    </MenuItem.Icon>
                    <MenuItem x:Name="Importieren"
                              Header="Importieren"
                              ToolTip="Gruppendaten aus anderem Export oder der Online Abfrage Importieren"
                              Click="Import_Click"
                              Foreground="{DynamicResource MahApps.Brushes.Text}">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterial Width="22"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        Kind="ApplicationImport" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="Exportieren"
                              Header="Exportieren"
                              ToolTip="Gruppendaten Exportieren"
                              Click="Export_Click"
                              Foreground="{DynamicResource MahApps.Brushes.Text}">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterial Width="22"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        Kind="ApplicationExport" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="SyncmitFtp"
                              Header="Sync mit FTP"
                              ToolTip="Daten von FTP Server laden"
                              Click="SyncmitFtp_Click"
                              Foreground="{DynamicResource MahApps.Brushes.Text}">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterial Width="22"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        Kind="ServerNetwork" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Auswertung"
                          Background="{DynamicResource MahApps.Brushes.Accent}"
                          Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                          Click="OpenEvaluation_Click">
                    <MenuItem.Icon>
                        <iconPacks:PackIconMaterial Width="22"
                                                    Height="22"
                                                    VerticalAlignment="Center"
                                                    Kind="ChartBox" />
                    </MenuItem.Icon>
                </MenuItem>
            </Menu>
            <Button x:Name="EinstellungenButton"
                    Content="Einstellungen"
                    ToolTip="Einstellungen für das LagerInsights programm"
                    Click="OpenSettingsButton_Click">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconModern Width="22"
                                                      Height="22"
                                                      VerticalAlignment="Center"
                                                      Kind="Settings" />
                            <TextBlock Margin="4 0 0 0"
                                       VerticalAlignment="Center"
                                       Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Menu>
                <MenuItem Header="Info">
                    <MenuItem.Icon>
                        <iconPacks:PackIconModern Width="22"
                                                  Height="22"
                                                  VerticalAlignment="Center"
                                                  Kind="InformationCircle" />
                    </MenuItem.Icon>
                    <MenuItem Header="Über"
                              Click="About_Click">
                        <MenuItem.Icon>
                            <iconPacks:PackIconFontAwesome Width="22"
                                                           Height="22"
                                                           Kind="BuildingRegular" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Hilfe"
                              Click="Hilfe_Click">
                        <MenuItem.Icon>
                            <iconPacks:PackIconModern Width="22"
                                                      Height="22"
                                                      Kind="Question" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Github"
                              Click="Github_Click"
                              ToolTip="Öffne die Github Seite des Projektes">
                        <MenuItem.Icon>
                            <iconPacks:PackIconModern Width="22"
                                                      Height="22"
                                                      Kind="SocialGithubOctocat" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Version"
                              Click="version_Click">
                        <MenuItem.Icon>
                            <iconPacks:PackIconCodicons Width="22"
                                                        Height="22"
                                                        Kind="Versions" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>

        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <!--  INHALTSFENSTER  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <TabControl>
                <TabItem Header="Gruppe">
                    <Grid Background="white">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical"
                                    Grid.Column="0"
                                    Grid.Row="0">
                            <GroupBox Header="Daten zur Jugendfeuerwehr">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Feuerwehr:"
                                               ToolTip="Name der Feuerwehr (BSP.: JF Musterstadt)"
                                               Margin="20,10,20,10"
                                               VerticalAlignment="Top"
                                               FontSize="24"
                                               Width="240" />
                                        <TextBox TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.Feuerwehr, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="Name der Feuerwehr (BSP.: JF Musterstadt)"
                                                 MinWidth="600"
                                                 MaxWidth="800"
                                                 FontSize="24"
                                                 Margin="20,10,20,10"
                                                 Height="44" />
                                    </StackPanel>
                                    <!--Organisationseinheit-->
                                    <StackPanel Orientation="Horizontal" />
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Vertical">
                                            <Label Content="Organisationseinheit:"
                                                   HorizontalAlignment="Left"
                                                   Margin="20,10,0,0"
                                                   ToolTip="Untergeordnete Organisationseinheit. Bei Kreiszeltlagern z.B. die Gemeinde aus der die Feuerwehr kommt."
                                                   FontSize="24"
                                                   Width="240" />
                                            <Label Content="(Kreis, Abschnitt, Gemeinde, ...)"
                                                   HorizontalAlignment="Left"
                                                   Margin="20,0,0,10"
                                                   ToolTip="Untergeordnete Organisationseinheit. Bei Kreiszeltlagern z.B. die Gemeinde aus der die Feuerwehr kommt."
                                                   VerticalAlignment="Center"
                                                   FontSize="14" />
                                        </StackPanel>
                                        <TextBox TextWrapping="Wrap"
                                                 Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.Organisationseinheit,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Margin="40,10,20,10"
                                                 ToolTip="Untergeordnete Organisationseinheit. Bei Kreiszeltlagern z.B. die Gemeinde aus der die Feuerwehr kommt."
                                                 MinWidth="600"
                                                 MaxWidth="900"
                                                 FontSize="24"
                                                 Height="44"
                                                 VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Verantwortlicher:"
                                               ToolTip="Name der Verantwortlichen Person"
                                               HorizontalAlignment="Left"
                                               Margin="20,10,20,10"
                                               VerticalAlignment="Center"
                                               FontSize="24"
                                               Width="240" />
                                        <TextBox TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.Verantwortlicher.Vorname, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="Vorname der Verantwortlichen Person"
                                                 MinWidth="300"
                                                 MaxWidth="400"
                                                 FontSize="24"
                                                 Margin="20,10,5,10"
                                                 Height="44"
                                                 VerticalAlignment="Center" />
                                        <TextBox TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.Verantwortlicher.Nachname, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="Nachname der Verantwortlichen Person"
                                                 MinWidth="300"
                                                 MaxWidth="400"
                                                 FontSize="24"
                                                 Margin="5,10,5,10"
                                                 Height="44"
                                                 VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="E-Mail:"
                                               ToolTip="E-Mail der Verantwortlichen Person"
                                               HorizontalAlignment="Left"
                                               Margin="20,10,20,10"
                                               VerticalAlignment="Center"
                                               FontSize="24"
                                               Width="200" />
                                        <Button Content=""
                                                Width="40"
                                                Height="40"
                                                ToolTip="E-Mail Schreiben"
                                                Click="EmailSchreiben_Click">
                                            <Button.ContentTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <iconPacks:PackIconModern Width="22"
                                                                                  Height="22"
                                                                                  VerticalAlignment="Center"
                                                                                  Kind="Email" />
                                                        <TextBlock Margin="0 0 0 0"
                                                                   VerticalAlignment="Center"
                                                                   Text="{Binding}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </Button.ContentTemplate>
                                        </Button>
                                        <TextBox x:Name="EmailVerantwortlicher"
                                                 TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.Verantwortlicher.Email, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="E-Mail der Verantwortlichen Person"
                                                 MinWidth="600"
                                                 MaxWidth="800"
                                                 FontSize="24"
                                                 Margin="20,10,20,10"
                                                 Height="44"
                                                 VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Telefon:"
                                               ToolTip="Telefonnummer der Verantwortlichen Person"
                                               HorizontalAlignment="Left"
                                               Margin="20,10,20,10"
                                               VerticalAlignment="Center"
                                               FontSize="24"
                                               Width="200" />
                                        <Button Content=""
                                                Width="40"
                                                Height="40"
                                                ToolTip="Telefonnummer kopieren"
                                                Click="TelefonnummerKopieren_Click">
                                            <Button.ContentTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <iconPacks:PackIconModern Width="22"
                                                                                  Height="22"
                                                                                  VerticalAlignment="Center"
                                                                                  Kind="Phone" />
                                                        <TextBlock Margin="0 0 0 0"
                                                                   VerticalAlignment="Center"
                                                                   Text="{Binding}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </Button.ContentTemplate>
                                        </Button>
                                        <TextBox x:Name="TelefonVerantwortlicher"
                                                 TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.Verantwortlicher.Telefon, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="Telefonnummer der Verantwortlichen Person"
                                                 MinWidth="600"
                                                 MaxWidth="800"
                                                 FontSize="24"
                                                 Margin="20,10,20,10"
                                                 Height="44"
                                                 VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Finanzen">

                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Betrag zu bezahlen:"
                                               HorizontalAlignment="Left"
                                               Margin="20,10,20,10"
                                               ToolTip="Diesen Betrag muss die Gruppe bezahlen"
                                               VerticalAlignment="Top"
                                               FontSize="24"
                                               FontWeight="Bold" />
                                        <Label Content="{Binding ElementName=gruppenListBox, Path=SelectedItem.ZuBezahlenderBetrag, Mode=OneWay, TargetNullValue=0, StringFormat={}{0:C2}}"
                                               Margin="0,10,2,10"
                                               ToolTip="Diesen Betrag muss die Gruppe bezahlen"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               FontWeight="Bold" />
                                        <Label Content="€"
                                               Margin="0,10,40,10"
                                               ToolTip=""
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               FontWeight="Bold" />

                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Betrag bereits gezahlt:"
                                               HorizontalAlignment="Left"
                                               Margin="20,10,20,10"
                                               ToolTip="Diesen Betrag hat die Gruppe bereits bezahlt"
                                               VerticalAlignment="Top"
                                               FontSize="24"
                                               FontWeight="Bold" />

                                        <TextBox x:Name="DecimalTextBox"
                                                 TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.GezahlterBeitrag, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                                 ToolTip="Diesen Betrag hat die Gruppe bereits bezahlt"
                                                 MinWidth="300"
                                                 MaxWidth="300"
                                                 FontSize="24"
                                                 Margin="20,10,4,10"
                                                 Height="44"
                                                 VerticalAlignment="Center"
                                                 PreviewTextInput="DecimalTextBox_PreviewTextInput" />

                                        <Label Content="€"
                                               Margin="0,10,40,10"
                                               ToolTip=""
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               FontWeight="Bold" />
                                    </StackPanel>
                                </StackPanel>

                            </GroupBox>

                            <GroupBox Header="Orga">

                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Zugewiesenes Zeltdorf:"
                                               HorizontalAlignment="Left"
                                               Margin="20,10,20,10"
                                               ToolTip="Diesem Zeltdorf ist die Gruppe zugewiesen"
                                               VerticalAlignment="Top"
                                               FontSize="24"
                                               FontWeight="Bold" />
                                        <ComboBox ItemsSource="{Binding Zeltdoerfer}"
                                                  SelectedItem="{Binding SelectedItem.Zeltdorf, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  Margin="20,10,20,10"
                                                  MinWidth="200"
                                                  FontSize="24"
                                                  VerticalAlignment="Center" />

                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">

                                        <Label Content="Einverständniserklärungen vorhanden:"
                                               Margin="20,10,10,10"
                                               ToolTip=""
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="24"
                                               FontWeight="Bold" />
                                        <mah:ToggleSwitch Margin="10,10,20,10"
                                                          OnContent="Alles ist vorhanden"
                                                          OffContent="Unterlagen fehlen"
                                                          IsOn="{Binding SelectedItem.Einverstaendniserklaerung, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          Width="200" />

                                    </StackPanel>
                                </StackPanel>

                            </GroupBox>
                        </StackPanel>
                        <!--Group Box, Alles für die Bahn-->
                        <StackPanel Orientation="Vertical"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Grid.RowSpan="3">
                            <GroupBox Header="Teilnehmenden Auswertung">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Vertical"
                                                Margin="10,10,10,10">
                                        <Label Content="Anzahl Teilnehmende"
                                               ToolTip="Gesamtanzahl Teilnehmende"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.AnzahlTeilnehmer,Mode=OneWay}"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center" />

                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                Margin="10,10,10,10">

                                        <Label Content="Anzahl 2. Geschwisterkind"
                                               ToolTip="Gesamtanzahl 2. Geschwisterkind"
                                               FontSize="20"
                                               HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.Anzahl2Geschwisterkind,Mode=OneWay}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center" />

                                        <Label Content="Anzahl 3. Geschwisterkind"
                                               ToolTip="Gesamtanzahl 3. Geschwisterkind"
                                               FontSize="20"
                                               HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.Anzahl3Geschwisterkind,Mode=OneWay}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center" />

                                        <Label Content="Anzahl Betreuer"
                                               ToolTip="Gesamtanzahl Betreuer"
                                               FontSize="20"
                                               HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.AnzahlBetreuer,Mode=OneWay}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center" />

                                        <Label Content="Anzahl Mitarbeiter"
                                               ToolTip="Gesamtanzahl Mitarbeiter"
                                               FontSize="20"
                                               HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.AnzahlMitarbeiter,Mode=OneWay}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center" />
                                    </StackPanel>

                                </StackPanel>

                            </GroupBox>
                            <GroupBox Header="Anmeldeinformationen">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Vertical"
                                                Margin="10,10,10,10">
                                        <Label Content="Zeitpunkt der Anmeldung:"
                                               HorizontalAlignment="center"
                                               Margin="0,10,0,0"
                                               ToolTip="Datum und Uhrzeit wann die Gruppe angemeldet oder angelegt wurde"
                                               VerticalAlignment="Top"
                                               FontSize="20" />

                                        <Label Content="{Binding ElementName=gruppenListBox, Path=SelectedItem.TimeStampAnmeldung,Mode=OneWay,FallbackValue=NN,TargetNullValue=NN}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"
                                               ToolTip="Datum und Uhrzeit wann die Gruppe angemeldet oder angelegt wurde"
                                               VerticalAlignment="Top"
                                               FontSize="16" />

                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                Margin="10,0,10,10">
                                        <Label Content="URL dieser Anmeldung:"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,0"
                                               ToolTip="Mit der URL kann auch nachträglich noch eine Anmeldung bearbeitet werden."
                                               VerticalAlignment="Top"
                                               FontSize="20" />
                                        <TextBlock HorizontalAlignment="Center"
                                                   Margin="0,0,0,0"
                                                   Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.UrlderAnmeldung,Mode=OneWay,FallbackValue=NN,TargetNullValue=NN}"
                                                   TextWrapping="Wrap"
                                                   x:Name="UrlderAnmeldung"
                                                   ToolTip="Anhand des Dateinamens kann die URL für die Bearbeitung einer Anmeldung ermittelt werden."
                                                   VerticalAlignment="Top"
                                                   FontSize="12" />
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                            <Button Content=""
                                                    Width="40"
                                                    Height="40"
                                                    Margin="10,10,10,10"
                                                    ToolTip="Anmelde URL kopieren"
                                                    Click="AnmeldeURLKopieren_Click">
                                                <Button.ContentTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <iconPacks:PackIconModern Width="22"
                                                                                      Height="22"
                                                                                      VerticalAlignment="Center"
                                                                                      Kind="PageCopy" />
                                                            <TextBlock Margin="0 0 0 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="{Binding}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </Button.ContentTemplate>
                                            </Button>
                                            <Button Content=""
                                                    Width="40"
                                                    Height="40"
                                                    Margin="10,10,10,10"
                                                    ToolTip="Anmeldung öffnen"
                                                    Click="LaunchAnmeldung_Click">
                                                <Button.ContentTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <iconPacks:PackIconModern Width="22"
                                                                                      Height="22"
                                                                                      VerticalAlignment="Center"
                                                                                      Kind="Browser" />
                                                            <TextBlock Margin="0 0 0 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="{Binding}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </Button.ContentTemplate>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>

                                </StackPanel>

                            </GroupBox>
                        </StackPanel>


                    </Grid>
                </TabItem>
                <TabItem Header="Teilnehmende">
                    <DataGrid AutoGenerateColumns="False"
                              IsReadOnly="False"
                              ItemsSource="{Binding ElementName=gruppenListBox, Path=SelectedItem.Persons}"
                              ColumnWidth="SizeToCells">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Geschlecht"
                                                Binding="{Binding Geschlecht}"
                                                IsReadOnly="True"
                                                Width="100" />
                            <DataGridTextColumn Header="Vorname"
                                                Binding="{Binding Vorname}" />
                            <DataGridTextColumn Header="Nachname"
                                                Binding="{Binding Nachname}" />
                            <DataGridTextColumn Header="Geburtsdatum"
                                                Binding="{Binding Geburtsdatum, StringFormat=d}"
                                                Width="120" />
                            <DataGridTextColumn Header="Alter"
                                                Binding="{Binding Alter}"
                                                IsReadOnly="True"
                                                Width="80" />
                            <DataGridTextColumn Header="Status"
                                                Binding="{Binding StatusFriendlyName}"
                                                IsReadOnly="True" />
                            <DataGridTextColumn Header="Essgewohnheiten"
                                                Binding="{Binding Essgewohnheiten}"
                                                IsReadOnly="True" />
                            <DataGridTextColumn Header="Unverträglichkeiten"
                                                Binding="{Binding Unvertraeglichkeiten}"
                                                IsReadOnly="True" />
                            <DataGridTextColumn Header="Strasse"
                                                Binding="{Binding Strasse}"
                                                IsReadOnly="False" />
                            <DataGridTextColumn Header="PLZ"
                                                Binding="{Binding Plz}"
                                                IsReadOnly="False" />
                            <DataGridTextColumn Header="Ort"
                                                Binding="{Binding Ort}"
                                                IsReadOnly="False" />
                        </DataGrid.Columns>
                    </DataGrid>

                </TabItem>

            </TabControl>

        </Grid>
        <!-- Rechter Listenbereich -->
        <Border BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                BorderThickness="4"
                Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                    <Label Content="Gruppen"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           VerticalAlignment="Center"
                           FontSize="24"
                           FontWeight="Bold" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Label Content="Fertige Wehren ausblenden"
                               ToolTip="Bei Auswahl werden alle Wehren ausgeblendet, die bereits vollständig bezahlt haben und bei denen alle Unterlagen vorliegen."
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="16" />
                        <CheckBox ToolTip="Bei Auswahl werden alle Wehren ausgeblendet, die bereits vollständig bezahlt haben.."
                                  Checked="FertigeGruppenAusblenden"
                                  Unchecked="FertigeGruppenAusblenden"
                                  x:Name="FertigeGruppenAusblenden_Checkbox"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Label Content="Sortieren nach:"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="16" />
                        <ComboBox x:Name="sortComboBox"
                                  SelectedIndex="0"
                                  SelectionChanged="sortComboBox_SelectionChanged"
                                  Width="120">
                            <ComboBoxItem Content="Name" />
                            <ComboBoxItem Content="Name Absteigend" />
                            <ComboBoxItem Content="Organisationseinheit" />
                            <ComboBoxItem Content="Anmeldung" />
                            <ComboBoxItem Content="Lager Nr." />
                        </ComboBox>
                    </StackPanel>

                </StackPanel>

                <Separator Grid.Row="1"
                           Margin="10,10,10,10"
                           Grid.Column="0"
                           Grid.ColumnSpan="2" />
                <ListBox Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Grid.Row="2"
                         ItemsSource="{Binding Gruppen}"
                         SelectionChanged="gruppenListBox_SelectionChanged"
                         x:Name="gruppenListBox"
                         PreviewKeyDown="gruppenListBox_KeyDown"
                         Loaded="gruppenListBox_Loaded">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Feuerwehr}" />
                                <TextBlock Text=" | " />
                                <TextBlock Text="{Binding AnzahlTeilnehmer}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Separator Grid.Row="3"
                           Margin="10,10,10,10"
                           Grid.Column="0"
                           Grid.ColumnSpan="2" />

                <Button Grid.Column="0"
                        Grid.Row="4"
                        Content="Hinzufügen"
                        ToolTip="Hinzufügen einer Gruppe"
                        Click="ButtonAddGroup_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconModern Width="22"
                                                          Height="22"
                                                          VerticalAlignment="Center"
                                                          Kind="Add" />
                                <TextBlock Margin="4 0 0 0"
                                           VerticalAlignment="Center"
                                           Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                <Button Grid.Column="1"
                        Grid.Row="4"
                        Content="Löschen"
                        ToolTip="Löschen einer Gruppe"
                        Command="{Binding RemoveGroupCommand}"
                        CommandParameter="{Binding ElementName=gruppenListBox, Path=SelectedItem}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconModern Width="22"
                                                          Height="22"
                                                          VerticalAlignment="Center"
                                                          Kind="Delete" />
                                <TextBlock Margin="4 0 0 0"
                                           VerticalAlignment="Center"
                                           Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>
        </Border>
    </Grid>

</mah:MetroWindow>