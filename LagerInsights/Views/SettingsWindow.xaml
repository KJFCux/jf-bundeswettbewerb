<Window x:Class="LagerInsights.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Einstellungen"
        Height="1020"
        Width="1020"
        SnapsToDevicePixels="True"
        SizeChanged="Window_SizeChanged">
    <Window.LayoutTransform>
        <ScaleTransform ScaleX="{Binding ScaleFactorSettings}"
                        ScaleY="{Binding ScaleFactorSettings}" />
    </Window.LayoutTransform>
    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="{Binding ScaleFactorSettings}"
                            ScaleY="{Binding ScaleFactorSettings}" />
        </Grid.LayoutTransform>
        <TabControl>
            <TabItem Header="Einstellungen">
                <Grid Background="White"
                      x:Name="EinstellungenGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0"
                                Grid.RowSpan="2">
                        <Grid Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Column="0"
                                        Grid.Row="0">
                                <Label Content="Titel der Veranstaltung:"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                                <Label Content="Ort der Veranstaltung:"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                                <Label Content="Startdatum:"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                                <Label Content="Enddatum:"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                                <Label Content="Veranstaltungsleitung:"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                                <Label Content="Teilnehmendenbeitrag:"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                                <Label Content="Logo Pfad:"
                                       ToolTip="Ein ausgewähltes Logo wird auf exportierten Dokumenten und der Urkunde angezeigt. Standard ist das Wappen der DJF"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                                <Label Content="Namen:"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                                <Label Content="Funktionen:"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                                <Label Content="Unterschrift Links:"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                                <Label Content="Unterschrift Rechts:"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                                <Label Content="Zeltdörfer:"
                                       HorizontalAlignment="Right"
                                       Margin="10,10,0,10"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Height="40"
                                       FontWeight="Bold" />
                            </StackPanel>
                            <StackPanel Grid.Column="2"
                                        Grid.Row="0">
                                <TextBox TextWrapping="Wrap"
                                         Text="{Binding Einstellungen.Veranstaltungstitel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="16"
                                         Margin="0,10,10,10"
                                         Height="40"
                                         MinWidth="400"
                                         MaxWidth="800"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left" />
                                <TextBox TextWrapping="Wrap"
                                         Text="{Binding Einstellungen.Veranstaltungsort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="16"
                                         Margin="0,10,10,10"
                                         Height="40"
                                         MinWidth="400"
                                         MaxWidth="800"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left" />
                                <DatePicker VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            MinWidth="400"
                                            Height="40"
                                            MaxWidth="800"
                                            Margin="0,10,10,10"
                                            SelectedDate="{Binding Einstellungen.Veranstaltungsdatum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,TargetNullValue={x:Static System:DateTime.Now}}" />
                                <DatePicker VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            MinWidth="400"
                                            Height="40"
                                            MaxWidth="800"
                                            Margin="0,10,10,10"
                                            SelectedDate="{Binding Einstellungen.VeranstaltungsdatumEnde, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,TargetNullValue={x:Static System:DateTime.Now}}" />
                                <TextBox TextWrapping="Wrap"
                                         Text="{Binding Einstellungen.Veranstaltungsleitung, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="16"
                                         Margin="0,10,10,10"
                                         Height="40"
                                         MinWidth="400"
                                         MaxWidth="800"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left" />
                                <TextBox TextWrapping="Wrap"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"
                                         Text="{Binding Einstellungen.Teilnehmendenbeitrag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                         FontSize="16"
                                         Margin="0,10,10,10"
                                         Height="40"
                                         MinWidth="400"
                                         MaxWidth="800"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBox TextWrapping="Wrap"
                                             ToolTip="Ein ausgewähltes Logo wird auf exportierten Dokumenten und der Urkunde angezeigt. Standard ist das Wappen der DJF"
                                             Text="{Binding Einstellungen.Logopfad, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             x:Name="SelectedLogoPathTextBox"
                                             FontSize="16"
                                             Margin="0,10,10,10"
                                             Height="40"
                                             MinWidth="200"
                                             MaxWidth="800"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left" />
                                    <Button Content="Logo Importieren"
                                            ToolTip="Ein ausgewähltes Logo wird auf exportierten Dokumenten und der Urkunde angezeigt. Standard ist das Wappen der DJF"
                                            Click="SelectLogoButton_Click"
                                            Margin="10,10,10,10">
                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <iconPacks:PackIconMaterial Width="22"
                                                                                Height="22"
                                                                                VerticalAlignment="Center"
                                                                                Kind="Upload" />
                                                    <TextBlock Margin="4 0 0 0"
                                                               VerticalAlignment="Center"
                                                               Text="{Binding}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox TextWrapping="Wrap"
                                             Text="{Binding Einstellungen.Namelinks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="16"
                                             Margin="0,10,10,10"
                                             Height="40"
                                             MinWidth="200"
                                             MaxWidth="800"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left" />
                                    <TextBox TextWrapping="Wrap"
                                             Text="{Binding Einstellungen.Namerechts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="16"
                                             Margin="0,10,10,10"
                                             Height="40"
                                             MinWidth="200"
                                             MaxWidth="800"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox TextWrapping="Wrap"
                                             Text="{Binding Einstellungen.Funktionlinks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="16"
                                             Margin="0,10,10,10"
                                             Height="40"
                                             MinWidth="200"
                                             MaxWidth="800"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left" />
                                    <TextBox TextWrapping="Wrap"
                                             Text="{Binding Einstellungen.Funktionrechts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="16"
                                             Margin="0,10,10,10"
                                             Height="40"
                                             MinWidth="200"
                                             MaxWidth="800"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox TextWrapping="Wrap"
                                             Text="{Binding Einstellungen.Unterschriftlinks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="16"
                                             Margin="0,10,10,10"
                                             Height="40"
                                             MinWidth="200"
                                             MaxWidth="800"
                                             VerticalAlignment="Center"
                                             x:Name="SelectedUnterschriftlinksPathTextBox"
                                             HorizontalAlignment="Left" />
                                    <Button Content="Unterschrift Importieren"
                                            Click="SelectUnterschriftlinksButton_Click"
                                            Margin="10,10,10,10">
                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <iconPacks:PackIconMaterial Width="22"
                                                                                Height="22"
                                                                                VerticalAlignment="Center"
                                                                                Kind="Upload" />
                                                    <TextBlock Margin="4 0 0 0"
                                                               VerticalAlignment="Center"
                                                               Text="{Binding}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox TextWrapping="Wrap"
                                             Text="{Binding Einstellungen.Unterschriftrechts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="16"
                                             x:Name="SelectedUnterschriftrechtsPathTextBox"
                                             Margin="0,10,10,10"
                                             Height="40"
                                             MinWidth="200"
                                             MaxWidth="800"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left" />
                                    <Button Content="Unterschrift Importieren"
                                            Click="SelectUnterschriftrechtsButton_Click"
                                            Margin="10,10,10,10">
                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <iconPacks:PackIconMaterial Width="22"
                                                                                Height="22"
                                                                                VerticalAlignment="Center"
                                                                                Kind="Upload" />
                                                    <TextBlock Margin="4 0 0 0"
                                                               VerticalAlignment="Center"
                                                               Text="{Binding}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>

                                </StackPanel>
                                <StackPanel>
                                    <ListBox ItemsSource="{Binding Zeltdoerfer}"
                                             SelectionMode="Multiple"
                                             Margin="0,10,0,10"
                                             x:Name="ZeltdorfListBox"
                                             Height="100"
                                             Width="200"
                                             MinWidth="200"
                                             MaxWidth="800"
                                             BorderThickness="1"
                                             BorderBrush="DimGray"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Center" />
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                Margin="0,10,0,10">
                                        <TextBox Width="200"
                                                 ToolTip="Neues Zeltdorf hinzufügen"
                                                 x:Name="TextBoxZeltdorf"
                                                 Margin="0,0,10,0" />
                                        <Button Content="Hinzufügen"
                                                Click="ButtonAddZeltdorf_Click"/>
                                        <Button Content="Entfernen"
                                                Click="ButtonRemoveZeltdorf_Click"
                                                Margin="10,0,0,0" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>


                    </StackPanel>


                    <Rectangle Grid.Column="1"
                               Grid.Row="0"
                               Grid.RowSpan="2"
                               HorizontalAlignment="Center"
                               Width="4"
                               Fill="{DynamicResource MahApps.Brushes.AccentBase}"
                               Height="{Binding ElementName=AuswertungsGrid, Path=ActualHeight}"
                               VerticalAlignment="Center" />


                    <StackPanel Grid.Column="2"
                                Grid.Row="0"
                                Grid.RowSpan="2">

                        <Label Content="SFTP Daten Verwalten"
                               HorizontalAlignment="Center"
                               Margin="10,10,10,10"
                               FontSize="26"
                               FontWeight="Bold"
                               VerticalAlignment="Top" />
                        <Label Content="Server"
                               ToolTip="Hostname des Servers"
                               HorizontalAlignment="Center"
                               Margin="10,10,10,5"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold" />
                        <TextBox TextWrapping="Wrap"
                                 Text="{Binding Einstellungen.Hostname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Hostname des Servers"
                                 FontSize="16"
                                 Margin="10,5,10,10"
                                 Height="34"
                                 TextChanged="TextBox_TextChanged" />
                        <Label Content="Pfad"
                               ToolTip="Pfad zu den Gruppendaten"
                               HorizontalAlignment="Center"
                               Margin="10,10,10,5"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold" />
                        <TextBox TextWrapping="Wrap"
                                 Text="{Binding Einstellungen.Pfad, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Pfad zu den Gruppendaten"
                                 FontSize="16"
                                 Margin="10,5,10,10"
                                 Height="34"
                                 VerticalAlignment="Center" />
                        <Label Content="Benutzername"
                               ToolTip="Benutzername zum Verbinden mit dem Server"
                               HorizontalAlignment="Center"
                               Margin="10,10,10,5"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold" />
                        <TextBox TextWrapping="Wrap"
                                 Text="{Binding Einstellungen.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Benutzername zum Verbinden mit dem Server"
                                 FontSize="16"
                                 Margin="10,5,10,10"
                                 Height="34"
                                 VerticalAlignment="Center" />

                        <Label Content="Password"
                               ToolTip="Password zum Verbinden mit dem Server"
                               HorizontalAlignment="Center"
                               Margin="10,10,10,5"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold" />
                        <PasswordBox ToolTip="Password zum Verbinden mit dem Server"
                                     FontSize="16"
                                     Margin="10,5,10,10"
                                     Height="34"
                                     VerticalAlignment="Center"
                                     PasswordChanged="PasswordBox_PasswordChanged" />
                        <Button Content="Teste Verbindung"
                                ToolTip="Verbinde mit dem FTP Server und teste die Verbindung"
                                Click="TesteVerbindung_Click"
                                x:Name="TesteVerbindung_Button"
                                Margin="10,20,10,10">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Width="22"
                                                                    Height="22"
                                                                    VerticalAlignment="Center"
                                                                    Kind="ServerNetwork" />
                                        <TextBlock Margin="4 0 0 0"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Rectangle Margin="20"
                                   HorizontalAlignment="Center"
                                   Width="200"
                                   Fill="{DynamicResource MahApps.Brushes.AccentBase}"
                                   Height="4"
                                   VerticalAlignment="Center" />

                        <Button Content="Speichern und Schließen"
                                ToolTip="Speichere alle Änderungen"
                                Click="SaveAndClose_Click"
                                Margin="10,10,10,10">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Width="22"
                                                                    Height="22"
                                                                    VerticalAlignment="Center"
                                                                    Kind="ContentSave" />
                                        <TextBlock Margin="4 0 0 0"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>