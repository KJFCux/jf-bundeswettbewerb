<mah:MetroWindow x:Class="LagerInsights.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:LagerInsights"
                 Title="DJF Bundeswettbewerb Auswertungsprogramm"
                 Width="1600"
                 Height="900"
                 GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
                 ResizeMode="CanResizeWithGrip"
                 WindowStartupLocation="CenterScreen"
                 WindowState="Maximized"
                 mc:Ignorable="d"
                 DataContext="{Binding RelativeSource={RelativeSource Self}}"
                 Closing="Window_Closing"
                 SnapsToDevicePixels="True"
                 SizeChanged="Window_SizeChanged">
    <Window.LayoutTransform>
        <ScaleTransform ScaleX="{Binding ScaleFactor}"
                        ScaleY="{Binding ScaleFactor}" />
    </Window.LayoutTransform>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Save"
                        Executed="CommandSaving"
                        CanExecute="CommandSaving_CanExecute" />
    </Window.CommandBindings>
    <Window.Resources>
        <local:AgeToColorConverter x:Key="AgeToColorConverter" />
        <local:BirthdayToColorConverter x:Key="BirthdayToColorConverter" />
    </Window.Resources>

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button x:Name="LaunchWebsiteButton"
                    Click="LaunchWebsite_Click"
                    ToolTip="Öffne die Webseite">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconOcticons Width="22"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        Kind="Flame" />
                            <TextBlock Margin="4 0 0 0"
                                       VerticalAlignment="Center"
                                       Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>

            <Menu Background="{DynamicResource MahApps.Brushes.Accent}">

                <MenuItem Header="Datei"
                          Background="{DynamicResource MahApps.Brushes.Accent}"
                          Foreground="{DynamicResource MahApps.Brushes.IdealForeground}">
                    <MenuItem.Icon>
                        <iconPacks:PackIconModern Width="22"
                                                  Height="22"
                                                  VerticalAlignment="Center"
                                                  Kind="Folder" />
                    </MenuItem.Icon>
                    <MenuItem x:Name="Importieren"
                              Header="Importieren"
                              ToolTip="Gruppendaten aus anderem Export oder der Online Abfrage Importieren"
                              Click="Import_Click"
                              Foreground="{DynamicResource MahApps.Brushes.Text}">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterial Width="22"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        Kind="ApplicationImport" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="Exportieren"
                              Header="Exportieren"
                              ToolTip="Gruppendaten Exportieren"
                              Click="Export_Click"
                              Foreground="{DynamicResource MahApps.Brushes.Text}">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterial Width="22"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        Kind="ApplicationExport" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="ImportierenExcel"
                              Header="Excel Importieren"
                              ToolTip="Meldebögen im Excel Format Importieren"
                              Click="ImportExcel_Click"
                              Foreground="{DynamicResource MahApps.Brushes.Text}">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterial Width="22"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        Kind="MicrosoftExcel" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Auswertung"
                          Background="{DynamicResource MahApps.Brushes.Accent}"
                          Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                          Click="OpenEvaluation_Click">
                    <MenuItem.Icon>
                        <iconPacks:PackIconMaterial Width="22"
                                                    Height="22"
                                                    VerticalAlignment="Center"
                                                    Kind="ChartBox" />
                    </MenuItem.Icon>
                </MenuItem>
            </Menu>
            <Button x:Name="EinstellungenButton"
                    Content="Einstellungen"
                    ToolTip="Einstellungen für das LagerInsightssprogramm"
                    Click="OpenSettingsButton_Click">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconModern Width="22"
                                                      Height="22"
                                                      VerticalAlignment="Center"
                                                      Kind="Settings" />
                            <TextBlock Margin="4 0 0 0"
                                       VerticalAlignment="Center"
                                       Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Menu>
                <MenuItem Header="Info">
                    <MenuItem.Icon>
                        <iconPacks:PackIconModern Width="22"
                                                  Height="22"
                                                  VerticalAlignment="Center"
                                                  Kind="InformationCircle" />
                    </MenuItem.Icon>
                    <MenuItem Header="Über"
                              Click="About_Click">
                        <MenuItem.Icon>
                            <iconPacks:PackIconFontAwesome Width="22"
                                                           Height="22"
                                                           Kind="BuildingRegular" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Hilfe"
                              Click="Hilfe_Click">
                        <MenuItem.Icon>
                            <iconPacks:PackIconModern Width="22"
                                                      Height="22"
                                                      Kind="Question" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Github"
                              Click="Github_Click"
                              ToolTip="Öffne die Github Seite des Projektes">
                        <MenuItem.Icon>
                            <iconPacks:PackIconModern Width="22"
                                                      Height="22"
                                                      Kind="SocialGithubOctocat" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Version"
                              Click="version_Click">
                        <MenuItem.Icon>
                            <iconPacks:PackIconCodicons Width="22"
                                                        Height="22"
                                                        Kind="Versions" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>

        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <!--  INHALTSFENSTER  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <TabControl>
                <TabItem Header="Gruppe">
                    <Grid Background="white">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical"
                                    Grid.Column="0"
                                    Grid.Row="0">
                            <GroupBox Header="Daten zur Jugendfeuerwehr">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Feuerwehr:"
                                               ToolTip="Name der Feuerwehr (BSP.: JF Musterstadt)"
                                               Margin="20,10,20,10"
                                               VerticalAlignment="Top"
                                               FontSize="24"
                                               Width="240" />
                                        <TextBox TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.Feuerwehr, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="Name der Feuerwehr (BSP.: JF Musterstadt)"
                                                 MinWidth="600"
                                                 MaxWidth="800"
                                                 FontSize="24"
                                                 Margin="20,10,20,10"
                                                 Height="44" />
                                    </StackPanel>
                                    <!--Organisationseinheit-->
                                    <StackPanel Orientation="Horizontal" />
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Vertical">
                                            <Label Content="Organisationseinheit:"
                                                   HorizontalAlignment="Left"
                                                   Margin="20,10,0,0"
                                                   ToolTip="Untergeordnete Organisationseinheit. Bei Kreiszeltlagern z.B. die Gemeinde aus der die Feuerwehr kommt."
                                                   FontSize="24"
                                                   Width="240" />
                                            <Label Content="(Kreis, Abschnitt, Gemeinde, ...)"
                                                   HorizontalAlignment="Left"
                                                   Margin="20,0,0,10"
                                                   ToolTip="Untergeordnete Organisationseinheit. Bei Kreiszeltlagern z.B. die Gemeinde aus der die Feuerwehr kommt."
                                                   VerticalAlignment="Center"
                                                   FontSize="14" />
                                        </StackPanel>
                                        <TextBox TextWrapping="Wrap"
                                                 Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.Organisationseinheit,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Margin="40,10,20,10"
                                                 ToolTip="Untergeordnete Organisationseinheit. Bei Kreiszeltlagern z.B. die Gemeinde aus der die Feuerwehr kommt."
                                                 MinWidth="600"
                                                 MaxWidth="900"
                                                 FontSize="24"
                                                 Height="44"
                                                 VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Verantwortlicher:"
                                               ToolTip="Name der Verantwortlichen Person"
                                               HorizontalAlignment="Left"
                                               Margin="20,10,20,10"
                                               VerticalAlignment="Center"
                                               FontSize="24"
                                               Width="240" />
                                        <TextBox TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.Verantworlicher.Vorname, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="Vorname der Verantwortlichen Person"
                                                 MinWidth="300"
                                                 MaxWidth="400"
                                                 FontSize="24"
                                                 Margin="20,10,5,10"
                                                 Height="44"
                                                 VerticalAlignment="Center" />
                                        <TextBox TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.Verantworlicher.Nachname, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="Nachname der Verantwortlichen Person"
                                                 MinWidth="300"
                                                 MaxWidth="400"
                                                 FontSize="24"
                                                 Margin="5,10,5,10"
                                                 Height="44"
                                                 VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="E-Mail:"
                                               ToolTip="E-Mail der Verantwortlichen Person"
                                               HorizontalAlignment="Left"
                                               Margin="20,10,20,10"
                                               VerticalAlignment="Center"
                                               FontSize="24"
                                               Width="200" />
                                        <Button Content=""
                                                Width="40"
                                                Height="40"
                                                ToolTip="E-Mail Schreiben"
                                                Click="EmailSchreiben_Click">
                                            <Button.ContentTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <iconPacks:PackIconModern Width="22"
                                                                                  Height="22"
                                                                                  VerticalAlignment="Center"
                                                                                  Kind="Email" />
                                                        <TextBlock Margin="0 0 0 0"
                                                                   VerticalAlignment="Center"
                                                                   Text="{Binding}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </Button.ContentTemplate>
                                        </Button>
                                        <TextBox TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.Verantworlicher.Email, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="E-Mail der Verantwortlichen Person"
                                                 MinWidth="600"
                                                 MaxWidth="800"
                                                 FontSize="24"
                                                 Margin="20,10,20,10"
                                                 Height="44"
                                                 VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Telefon:"
                                               ToolTip="Telefonnummer der Verantwortlichen Person"
                                               HorizontalAlignment="Left"
                                               Margin="20,10,20,10"
                                               VerticalAlignment="Center"
                                               FontSize="24"
                                               Width="200" />
                                        <Button Content=""
                                                Width="40"
                                                Height="40"
                                                ToolTip="Telefonnummer kopieren"
                                                Click="TelefonnummerKopieren_Click">
                                            <Button.ContentTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <iconPacks:PackIconModern Width="22"
                                                                                  Height="22"
                                                                                  VerticalAlignment="Center"
                                                                                  Kind="Phone" />
                                                        <TextBlock Margin="0 0 0 0"
                                                                   VerticalAlignment="Center"
                                                                   Text="{Binding}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </Button.ContentTemplate>
                                        </Button>
                                        <TextBox TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.Verantwortlicher.Telefon, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="Telefonnummer der Verantwortlichen Person"
                                                 MinWidth="600"
                                                 MaxWidth="800"
                                                 FontSize="24"
                                                 Margin="20,10,20,10"
                                                 Height="44"
                                                 VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Finanzen">

                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Betrag zu bezahlen:"
                                               HorizontalAlignment="Left"
                                               Margin="20,10,20,10"
                                               ToolTip="Diesen Betrag muss die Gruppe bezahlen"
                                               VerticalAlignment="Top"
                                               FontSize="24"
                                               FontWeight="Bold" />

                                        <Label Content="{Binding ElementName=gruppenListBox, Path=SelectedItem.zuBezahlenderBetrag,Mode=OneWay, TargetNullValue=0}"
                                               Margin="0,10,2,10"
                                               ToolTip="Diesen Betrag muss die Gruppe bezahlen"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               FontWeight="Bold" />
                                        <Label Content="€"
                                               Margin="0,10,40,10"
                                               ToolTip=""
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               FontWeight="Bold" />

                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Betrag bereits gezahlt:"
                                               HorizontalAlignment="Left"
                                               Margin="20,10,20,10"
                                               ToolTip="Diesen Betrag hat die Gruppe bereits bezahlt"
                                               VerticalAlignment="Top"
                                               FontSize="24"
                                               FontWeight="Bold" />

                                        <TextBox x:Name="DecimalTextBox"
                                                 TextWrapping="Wrap"
                                                 Text="{Binding SelectedItem.GezahlterBeitrag, ElementName=gruppenListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                                 ToolTip="Diesen Betrag hat die Gruppe bereits bezahlt"
                                                 MinWidth="300"
                                                 MaxWidth="300"
                                                 FontSize="24"
                                                 Margin="20,10,4,10"
                                                 Height="44"
                                                 VerticalAlignment="Center"
                                                 PreviewTextInput="DecimalTextBox_PreviewTextInput" />

                                        <Label Content="€"
                                               Margin="0,10,40,10"
                                               ToolTip=""
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               FontWeight="Bold" />
                                    </StackPanel>
                                </StackPanel>

                            </GroupBox>
                        </StackPanel>
                        <!--Group Box, Alles für die Bahn-->
                        <StackPanel Orientation="Vertical"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Grid.RowSpan="3">
                            <GroupBox Header="Teilnehmenden Auswertung">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Vertical"
                                                Margin="10,10,10,10">
                                        <Label Content="Anzahl Teilnehmende"
                                               ToolTip="Gesamtanzahl Teilnehmende"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.anzahlTeilnehmer,Mode=OneWay}"
                                                   FontSize="24"
                                                   FontWeight="Bold" />

                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                Margin="10,10,10,10">

                                        <Label Content="Anzahl 2. Geschwisterkind"
                                               ToolTip="Gesamtanzahl 2. Geschwisterkind"
                                               FontSize="20"
                                               HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.anzahl2Geschwisterkind,Mode=OneWay}"
                                                   FontSize="16"
                                                   FontWeight="Bold" />

                                        <Label Content="Anzahl 3. Geschwisterkind"
                                               ToolTip="Gesamtanzahl 3. Geschwisterkind"
                                               FontSize="20"
                                               HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.anzahl3Geschwisterkind,Mode=OneWay}"
                                                   FontSize="16"
                                                   FontWeight="Bold" />

                                        <Label Content="Anzahl Betreuer"
                                               ToolTip="Gesamtanzahl Betreuer"
                                               FontSize="20"
                                               HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.anzahlBetreuer,Mode=OneWay}"
                                                   FontSize="16"
                                                   FontWeight="Bold" />

                                        <Label Content="Anzahl Mitarbeiter"
                                               ToolTip="Gesamtanzahl Mitarbeiter"
                                               FontSize="20"
                                               HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.anzahlMitarbeiter,Mode=OneWay}"
                                                   FontSize="16"
                                                   FontWeight="Bold" />
                                    </StackPanel>

                                </StackPanel>

                            </GroupBox>
                            <GroupBox Header="Anmeldeinformationen">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Vertical"
                                                Margin="10,10,10,10">
                                        <Label Content="Zeitpunkt der Anmeldung:"
                                               HorizontalAlignment="center"
                                               Margin="0,10,0,0"
                                               ToolTip="Datum und Uhrzeit wann die Gruppe angemeldet oder angelegt wurde"
                                               VerticalAlignment="Top"
                                               FontSize="20" />

                                        <Label Content="{Binding ElementName=gruppenListBox, Path=SelectedItem.TimeStampAnmeldung,Mode=OneWay,FallbackValue=NN,TargetNullValue=NN}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"
                                               ToolTip="Datum und Uhrzeit wann die Gruppe angemeldet oder angelegt wurde"
                                               VerticalAlignment="Top"
                                               FontSize="16" />

                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                Margin="10,0,10,10">
                                        <Label Content="URL dieser Anmeldung:"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,0"
                                               ToolTip="Mit der URL kann auch nachträglich noch eine Anmeldung bearbeitet werden."
                                               VerticalAlignment="Top"
                                               FontSize="20" />
                                        <TextBlock HorizontalAlignment="Center"
                                                   Margin="0,0,0,0"
                                                   Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.UrlderAnmeldung,Mode=OneWay,FallbackValue=NN,TargetNullValue=NN}"
                                                   TextWrapping="Wrap"
                                                   x:Name="UrlderAnmeldung"
                                                   ToolTip="Anhand des Dateinamens kann die URL für die Bearbeitung einer Anmeldung ermittelt werden."
                                                   VerticalAlignment="Top"
                                                   FontSize="12" />

                                        <Button Content=""
                                                Width="40"
                                                Height="40"
                                                ToolTip="Anmelde URL kopieren"
                                                Click="AnmeldeURLKopieren_Click">
                                            <Button.ContentTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <iconPacks:PackIconModern Width="22"
                                                                                  Height="22"
                                                                                  VerticalAlignment="Center"
                                                                                  Kind="PageCopy" />
                                                        <TextBlock Margin="0 0 0 0"
                                                                   VerticalAlignment="Center"
                                                                   Text="{Binding}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </Button.ContentTemplate>
                                        </Button>
                                    </StackPanel>

                                </StackPanel>

                            </GroupBox>
                        </StackPanel>



                    </Grid>
                </TabItem>
                <TabItem Header="Teilnehmende">
                    <Grid Background="White"
                          Name="TeilnehmendenGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <!--Blauer Hintergrund für Ersatzmann-->
                        <Rectangle Grid.Column="0"
                                   Grid.ColumnSpan="6"
                                   Grid.Row="10"
                                   Grid.RowSpan="1"
                                   Fill="{DynamicResource MahApps.Brushes.Accent4}" />
                        <!--Labels für die Pos-->
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Content="Pos"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <Label Grid.Row="1"
                               Grid.Column="0"
                               Content="1"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <Label Grid.Row="2"
                               Grid.Column="0"
                               Content="2"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <Label Grid.Row="3"
                               Grid.Column="0"
                               Content="3"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <Label Grid.Row="4"
                               Grid.Column="0"
                               Content="4"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <Label Grid.Row="5"
                               Grid.Column="0"
                               Content="5"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <Label Grid.Row="6"
                               Grid.Column="0"
                               Content="6"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <Label Grid.Row="7"
                               Grid.Column="0"
                               Content="7"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <Label Grid.Row="8"
                               Grid.Column="0"
                               Content="8"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <Label Grid.Row="9"
                               Grid.Column="0"
                               Content="9"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <ComboBox x:Name="ersatzComboBox"
                                  SelectedIndex="0"
                                  Grid.Row="10"
                                  Grid.Column="0"
                                  Margin="0,0,0,0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  FontSize="30"
                                  FontWeight="Bold"
                                  SelectionChanged="ersatzComboBox_SelectionChanged"
                                  Width="Auto">
                            <ComboBoxItem Content="E" />
                            <ComboBoxItem Content="1" />
                            <ComboBoxItem Content="2" />
                            <ComboBoxItem Content="3" />
                            <ComboBoxItem Content="4" />
                            <ComboBoxItem Content="5" />
                            <ComboBoxItem Content="6" />
                            <ComboBoxItem Content="7" />
                            <ComboBoxItem Content="8" />
                            <ComboBoxItem Content="9" />
                        </ComboBox>
                        <Label Grid.Row="0"
                               Grid.Column="1"
                               Content="Vorname"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <Label Grid.Row="0"
                               Grid.Column="2"
                               Content="Nachname"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold" />
                        <Label Grid.Row="0"
                               Grid.Column="3"
                               Content="W/M/D"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
