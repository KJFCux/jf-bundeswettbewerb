                                 Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.FehlerLauefer9, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center"
                                 Height="60"
                                 MinWidth="300"
                                 Width="Auto"
                                 FontSize="36" />
                        <!--Zeit Bereich-->
                        <Rectangle Grid.Column="3"
                                   Grid.Row="0"
                                   Grid.RowSpan="10"
                                   HorizontalAlignment="Center"
                                   Width="10"
                                   Fill="{DynamicResource MahApps.Brushes.AccentBase}"
                                   Height="{Binding ElementName=BTeilGrid, Path=ActualHeight}"
                                   VerticalAlignment="Bottom" />

                        <!--Zeit Bereich-->
                        <Label Grid.Row="0"
                               Grid.Column="4"
                               Content="Zeit"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="36"
                               FontWeight="Bold" />

                        <StackPanel Orientation="Vertical"
                                    Grid.Row="1"
                                    Grid.RowSpan="9"
                                    Grid.Column="4"
                                    Grid.ColumnSpan="1">
                            <Label Grid.Row="0"
                                   Grid.Column="4"
                                   Content="Minuten  :  Sekunden"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal"
                                        Grid.Column="4"
                                        Grid.Row="2"
                                        HorizontalAlignment="Center">
                                <TextBox Grid.Column="4"
                                         Grid.Row="2"
                                         TabIndex="3"
                                         HorizontalAlignment="Center"
                                         TextWrapping="Wrap"
                                         Margin="0,20,0,10"
                                         Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.ZeitBTeil1Minuten, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         VerticalAlignment="Center"
                                         Height="60"
                                         Width="90"
                                         FontSize="30"
                                         ToolTip="Minuten von der ersten Zeit" />
                                <Label Grid.Row="0"
                                       Grid.Column="4"
                                       Content=":"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="30" />
                                <TextBox Grid.Column="4"
                                         Grid.Row="2"
                                         TabIndex="4"
                                         HorizontalAlignment="Center"
                                         TextWrapping="Wrap"
                                         Margin="0,20,0,10"
                                         Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.ZeitBTeil1Sekunden, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         VerticalAlignment="Center"
                                         Height="60"
                                         Width="90"
                                         FontSize="30"
                                         ToolTip="Sekunden von der ersten Zeit" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Grid.Column="4"
                                        Grid.Row="2"
                                        HorizontalAlignment="Center">
                                <TextBox Grid.Column="4"
                                         Grid.Row="2"
                                         TabIndex="7"
                                         HorizontalAlignment="Center"
                                         TextWrapping="Wrap"
                                         Margin="0,20,0,10"
                                         Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.ZeitBTeil2Minuten, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         VerticalAlignment="Center"
                                         Height="60"
                                         Width="90"
                                         FontSize="30"
                                         ToolTip="Minuten von der zweiten Zeit" />
                                <Label Grid.Row="0"
                                       Grid.Column="4"
                                       Content=":"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="30" />
                                <TextBox Grid.Column="4"
                                         Grid.Row="2"
                                         TabIndex="8"
                                         HorizontalAlignment="Center"
                                         TextWrapping="Wrap"
                                         Margin="0,20,0,10"
                                         Text="{Binding ElementName=gruppenListBox, Path=SelectedItem.ZeitBTeil2Sekunden, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         VerticalAlignment="Center"
                                         Height="60"
                                         Width="90"
                                         FontSize="30"
                                         ToolTip="Sekunden von der zweiten Zeit" />
                            </StackPanel>
                            <Label Grid.Row="0"
                                   Grid.Column="4"
                                   Content="Disqualifikation"
                                   HorizontalAlignment="Center"
                                   Margin="0,40,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Bold" />
                            <CheckBox Grid.Column="4"
                                      Grid.Row="3"
                                      Content="B-Teil"
                                      Margin="0,0,0,0"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Top"
                                      FontSize="20"
                                      FontWeight="Bold"
                                      IsChecked="{Binding ElementName=gruppenListBox, Path=SelectedItem.DisqualifikationB, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=false}" />
                            <Rectangle Grid.Column="4"
                                       Grid.Row="0"
                                       Grid.RowSpan="1"
                                       HorizontalAlignment="Center"
                                       Width="150"
                                       Height="5"
                                       Margin="20"
                                       Fill="{DynamicResource MahApps.Brushes.AccentBase}"
                                       VerticalAlignment="Bottom" />
                            <Label Grid.Row="0"
                                   Grid.Column="4"
                                   Content="Gesamteindruck"
                                   HorizontalAlignment="Center"
                                   Margin="0,40,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="24"
                                   FontWeight="Bold" />
                            <Label Grid.Row="0"
                                   Grid.Column="4"
                                   Content="{Binding ElementName=gruppenListBox, Path=SelectedItem.BTeilGesamteindruck, StringFormat=N2, Mode=OneWay}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Bold" />
                            <Label Grid.Row="0"
                                   Grid.Column="4"
                                   Content="Fehlerpunkte"
                                   HorizontalAlignment="Center"
                                   Margin="0,40,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="24"
                                   FontWeight="Bold" />
                            <Label Grid.Row="0"
                                   Grid.Column="4"
                                   Content="{Binding ElementName=gruppenListBox, Path=SelectedItem.FehlerBTeil, Mode=OneWay}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Bold" />
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>

        </Grid>
        <!-- Rechter Listenbereich -->
        <Border BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                BorderThickness="4"
                Grid.Column="1">
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Content="Gruppen"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           VerticalAlignment="Center"
                           FontSize="24"
                           FontWeight="Bold" />
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Center">
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Content="Fertige Gruppen ausblenden: "
                               ToolTip="Bei Auswahl werden alle Gruppen ausgeblendet die bereits vollständig ausgefüllt sind."
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="16" />
                        <CheckBox ToolTip="Bei Auswahl werden alle Gruppen ausgeblendet die bereits vollständig ausgefüllt sind."
                                  Checked="FertigeGruppenAusblenden"
                                  Unchecked="FertigeGruppenAusblenden"
                                  x:Name="FertigeGruppenAusblenden_Checkbox"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Center">
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Content="Sortieren nach:"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="16" />
                        <ComboBox x:Name="sortComboBox"
                                  SelectedIndex="0"
                                  Grid.Row="0"
                                  Grid.Column="0"
                                  Grid.ColumnSpan="2"
                                  SelectionChanged="sortComboBox_SelectionChanged"
                                  Width="120">
                            <ComboBoxItem Content="Name" />
                            <ComboBoxItem Content="Startzeit A" />
                            <ComboBoxItem Content="Startzeit B" />
                            <ComboBoxItem Content="Punkte" />
                            <ComboBoxItem Content="Gesamt Alter" />
                        </ComboBox>
                    </StackPanel>

                </StackPanel>

                <Separator Grid.Row="1"
                           Margin="10,10,10,10"
                           Grid.Column="0"
                           Grid.ColumnSpan="2" />
                <ListBox Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Grid.Row="2"
                         ItemsSource="{Binding Gruppen}"
                         SelectionChanged="gruppenListBox_SelectionChanged"
                         x:Name="gruppenListBox"
                         PreviewKeyDown="gruppenListBox_KeyDown"
                         Loaded="gruppenListBox_Loaded">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding LagerNr}" />
                                <TextBlock Text=" | " />
                                <TextBlock Text="{Binding GruppenName}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Separator Grid.Row="3"
                           Margin="10,10,10,10"
                           Grid.Column="0"
                           Grid.ColumnSpan="2" />

                <Button Grid.Column="0"
                        Grid.Row="4"
                        Content="Hinzufügen"
                        ToolTip="Hinzufügen einer Gruppe"
                        Click="ButtonAddGroup_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconModern Width="22"
                                                          Height="22"
                                                          VerticalAlignment="Center"
                                                          Kind="Add" />
                                <TextBlock Margin="4 0 0 0"
                                           VerticalAlignment="Center"
                                           Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                <Button Grid.Column="1"
                        Grid.Row="4"
                        Content="Löschen"
                        ToolTip="Löschen einer Gruppe"
                        Command="{Binding RemoveGroupCommand}"
                        CommandParameter="{Binding ElementName=gruppenListBox, Path=SelectedItem}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconModern Width="22"
                                                          Height="22"
                                                          VerticalAlignment="Center"
                                                          Kind="Delete" />
                                <TextBlock Margin="4 0 0 0"
                                           VerticalAlignment="Center"
                                           Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>
        </Border>
    </Grid>

</mah:MetroWindow>